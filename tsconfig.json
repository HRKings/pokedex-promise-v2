{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "include": [
    "types/index.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
